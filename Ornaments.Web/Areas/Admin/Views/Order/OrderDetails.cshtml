
@{
    ViewData["Title"] = "OrderDetails";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    string title = "Details";
    }
@using Ornaments.DataAccess.Entities.Order;
@model List<OrderDetail>
<partial name="_AdminTitle" model="title" />
@section Styles{
    <style>
        .w-100 {
            width: 100% !important;
        }

        .border-success {
            border: 1px solid green;
        }
    </style>
}
<div class="row">
    
<div class="col-lg-8">
    <div class="panel panel-default">
        <div class="panel-heading">
            List
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Price</th>
                            <th>Count</th>
                            <th>Commands</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Ornament.Name</td>
                                <td>@item.Price</td>
                                <td>@item.Count</td>
                                <td>
                                    @*<a class="btn btn-sm btn-warning text-white" asp-area="Admin" asp-controller="Order" asp-action="DeleteOrder" asp-route-id="@item.Id">Delete</a>*@
                                    @*<a class="btn btn-sm btn-warning text-white" asp-area="Admin" asp-controller="Order" asp-action="OrderDetails" asp-route-orderId="@item.Id">OrderDetails</a>*@
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.table-responsive -->
        </div>
        <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
</div>
<!-- /.col-lg-12 -->
</div>










