@using Ornaments.Core.Dtos.Ornament.Comment;
@model List<CommentsDto>
@{
    ViewData["Title"] = "Comments";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    string title = "نظرات ";
}
<partial name="_AdminTitle" model="title" />
@section Styles{
    <style>
        .w-100 {
            width: 100% !important;
        }

        .border-success {
            border: 1px solid green;
        }
    </style>
}
<div class="col-lg-8">
    <div class="panel panel-default">
        <div class="panel-heading">
            List
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>User Name</th>
                            <th>Ornament Name</th>
                            <th>Text</th>
                            <th>CreateDate</th>
                            <th>Commands</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.UserName</td>
                                <td>@item.OrnamentName</td>
                                <td>@item.Text</td>
                                <td>@item.CreateDate</td>
                                <td>
                                    <a class="btn btn-sm btn-warning text-white" asp-area="Admin" asp-controller="Ornament" asp-action="DeleteComment" asp-route-id="@item.Id" asp-route-ornamentId="@item.OrnamentId">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.table-responsive -->
        </div>
        <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
</div>
<!-- /.col-lg-12 -->
</div>


