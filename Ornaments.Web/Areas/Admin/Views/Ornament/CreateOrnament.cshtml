@using Ornaments.Core.Dtos;
@using Ornaments.DataAccess.Entities.Ornaments;
@model CreateOrnamentDto
@{
    ViewData["Title"] = "CreateOrnament";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    string title = "Create Ornament";
    var categories = ViewBag.Categories as List<Category>;
}


<partial name="_AdminTitle" model="title" />

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Informations
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <form id="filter-form" asp-area="Admin" asp-controller="Ornament" asp-action="CreateOrnament" method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            <label>Name</label>
                            <input asp-for="Name" class="form-control">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label>Brand</label>
                            <input asp-for="Brand" class="form-control">
                            <span asp-validation-for="Brand" class="text-danger"></span>
                        </div>
                         <div class="form-group">
                            <label>Description</label>
                           <textarea class="form-control" asp-for="Description">

                           </textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                         <div class="form-group">
                            <label>Image File</label>
                            <input type="file" name="image" class="form-control">
                        </div>
                         <div class="form-group">
                            <label>Invertory</label>
                            <input asp-for="Invertory" class="form-control">
                            <span asp-validation-for="Invertory" class="text-danger"></span>
                        </div>
                         <div class="form-group">
                            <label>IsDisplay</label>
                            <input asp-for="IsDisplay" class="form-control">
                            <span asp-validation-for="IsDisplay" class="text-danger"></span>
                        </div>
                         <div class="form-group">
                            <label>IsInMainPage</label>
                            <input asp-for="IsInMainPage" class="form-control">
                            <span asp-validation-for="IsInMainPage" class="text-danger"></span>
                        </div>
                         <div class="form-group">
                            <label>IsSlider</label>
                            <input asp-for="IsSlider" class="form-control">
                            <span asp-validation-for="IsSlider" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label>Price</label>
                            <input asp-for="Price" type="number" class="form-control">
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label>Category</label>
                            <select class="form-control " asp-for="CategoryId">
                                @foreach (var item in categories)
                                {
                                    <option value="@item.Id">@item.CategoryName</option>
                                }
                            </select>
                        </div>
                      
                        <div class="form-group">
                            <button type="submit" class="btn btn-info text-white w-100">Submit</button>
                        </div>
                    </form>
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
    </div>
    <!-- /.col-lg-12 -->
</div>



