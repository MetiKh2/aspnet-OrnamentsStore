		}
		function onSuccessAddProductToOrder(res) {
			console.log(res)
			ShowMessage('پیغام', res.message, res.status.toLowerCase())
			close_waiting()
		}
		$('#productCounter').change(function (e) {
			let value = parseInt(e.target.value);
			if (value && value > 0) {
				$('#add-product-to-order-count').val(value);
			}
		})

